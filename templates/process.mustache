{{!
    @template paygw_fawry/process

    Context variables required for this template:
    * show_accept_iframe - showing or hiding iframe according to payment method.
    * iframeurl - the url of iframe
    * ref - the reference code for payment in fawry_reference method

    Example context (json):
    {
        "ref": "123456"
    }

}}

<div id="accepting-container">
    <div class="accept_fawry_reference">
        {{{#success}}}
            <h2>{{# str }} reference_bill_reference, paygw_fawry {{/ str }}</h2>
            <h3 id="accept_fawry_reference_id">{{{ref}}}</h3>
            <p>{{# str }} reference_process_help, paygw_fawry {{/ str }}</p>
            <div data-purpose="status"><div>
        {{{/success}}}
        {{{^success}}}
            <h2>{{# str }} reference_error, paygw_fawry {{/ str }}</h2>
            <h3 id="accept_fawry_reference_id">{{{error}}}</h3>
        {{{/success}}}
    </div>
</div>